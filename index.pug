doctype html
html(lang="en")
  head
  
    link(rel="stylesheet" type="text/css" href="css/style.css")
    link(rel="stylesheet" type="text/css" href="css/normal.css")
    link(rel="stylesheet" type="text/css" href="css/media.css")
    script(src="js/script.js")
    title Le Restaurante
  body
   header.header
    .header__content
     .header__top
        img.header__logo(src="image/logo.png", alt="logo")
        nav.header__nav
            ul.header__list
                li
                    a.header__link(href="#") PRICE LIST
                li
                    a.header__link(href="#") OPENING HOURS
                li
                    a.header__link(href="#") ABOUT US
                li
                    a.header__link(href="#") CONTACTS
     .header__menu
        .header__side
            p.header__title FOR MEAT LOVERS
            button.header__button FULL MENU
        .header__center.header__side
            p.header__title VEGETFRIAN & VEGAN
            button.header__button FULL MENU
        .header__side
            p.header__title SEE OUR SECRETS
            button.header__button TAKE ME THERE

   .menu 
    .menu__content 
     p.menu__title DAILY MENU 
     .menu__vegan
      input.menu__box#check(type="checkbox", onclick="check()")
      label.menu__name(for="check") SHOW VEGAN MENU ONLY
     .menu__list 
      .menu__food#meat
       img.menu__image(src="image/meat.png", alt="meat")
       .menu__text 
        p.menu__subject RAW MEAT WITH BBQ ...............   
         span.menu__price 10$
        p.menu__subtitle ALERGENS ........................................................ 4, 8, 12
      .menu__food#fish
       img.menu__image(src="image/fish.png", alt="fish")
       .menu__text 
        p.menu__subject FRESH THOUT ............................   
         span.menu__price 13$
        p.menu__subtitle ALERGENS .............................................................. 4, 9
      .menu__food
       img.menu__image(src="image/soup.png", alt="soup")
       .menu__text 
        p.menu__subject MURSHROOM SOUP ...................    
         span.menu__price 9$
        p.menu__subtitle ALERGENS ........................................................ 1, 3, 11
      .menu__food#chicken
       img.menu__image(src="image/chicken.png", alt="chicken")
       .menu__text 
        p.menu__subject CHICKEN WITH POTATOES .......   
         span.menu__price 18$
        p.menu__subtitle ALERGENS ........................................................ 4, 8, 17
      .menu__food
       img.menu__image(src="image/pasta.png", alt="pasta")
       .menu__text 
        p.menu__subject PASTA WITH TOMATO PUR&EacuteE ...   
         span.menu__price 12$
        p.menu__subtitle ALERGENS ............................................................... 2, 6
      .menu__food
       img.menu__image(src="image/salad.png", alt="salad")
       .menu__text 
        p.menu__subject SALAD WITH BEETROOT ...........    
          span.menu__price 6$
        p.menu__subtitle ALERGENS ........................................................... none
      
   .food 
        .food__content 
         .food__menu#menu
          .food__info
           p.food__online ONLINE MENU
           p.food__title#title SPAGHETTI WITH FRESH TOMATOES AND DRESSING
           p.food__subtitle#subtitle Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
           button.food__button#button 12$ - ORDER 
         .food__box
          p(onclick="offer()").food__offer NEXT OFFER
           i(onclick="offer()").food__right

   .address
    .address__content 
     .address__box
      p.address__title WHERE TO FIND US?
      .address__block
       .address__logo 
        img(src="image/food-2.png", alt="").address__image
        p.address__name LeRestaurante
       .address__info 
        p.address__street Hr&#353pic 128 
        p.address__number Pardubice, 530 01
      button.address__button SHOW ON THE MAP
      
   .info 
        .info__content
            ul.info__list
                li.info__item_top ABOUT US
                li
                    a(href="#").info__item OUR STORY
                li
                    a(href="#").info__item SUPPLIERS
                li
                    a(href="#").info__item NEWS & UPDATES
                li
                    a(href="#").info__item FRANCHISE
            ul.info__list
                li.info__item_top FOR YOU
                li
                    a(href="#").info__item REVIEWS
                li
                    a(href="#").info__item FACEBOOK
                li
                    a(href="#").info__item INSTAGRAM
                li
                    a(href="#").info__item CAREER
            ul.info__list
                li.info__item_top USEFUL LINKS
                li
                    a(href="#").info__item MAP OF WEB
                li
                    a(href="#").info__item PARTNERS
                li
                    a(href="#").info__item MOBILE APP
                li
                    a(href="#").info__item OTHER
            .info__news 
                p.info__title SIGN UP TO OUR NEWSLETTER
                .info__block
                    input(type="text", placeholder="E-MAIL ADDRESS").info__text
                    button.info__button SING UP

